                      <!-- Block content -->
                      <div class="main-block-content counter-block-content">
                        <p>Shops</p>
                      </div><!-- /End Block content -->

                    </div><!--/End Body -->

                  </div><!-- /End Block container -->
                </div><!-- /End Counter -->

              </div><!-- /End col-lg-3 -->

            </div><!-- /End row -->
          </div><!-- /End container -->
        </div><!-- /End Section -->

        <!-- Section -->
        <div class="main-section">
          <!-- container -->
          <div class="container gx-4">
            <!-- row -->
            <div class="row gx-36">


              <!-- col-lg-8 -->
              <div class="col-lg-8 offset-lg-2">

                <!-- Section title -->
                <div class="section-title text-center">
                  <!-- Section title container -->
                  <div class="section-title-container">

                    <!-- Section title body -->
                    <div class="section-title-body">

                      <!-- Section title heading -->
                      <div class="section-title-heading">
                        <h6 class="font-weight-500 accent-color">What SeeSHA</h6>
                        <h2>アプリについて</h2>
                      </div><!-- /End Section title heading -->

                      <!-- Block content -->
                      <div class="section-title-content mt-48">
