<div id="page-body" class="page-body">
	<!-- row -->
	<div class="row main-row justify-content-center">
		<!-- Content area
		==================================================== -->
		<div id="primary" class="content-area col-lg-12">
			<!-- Main -->
			<main id="main" class="content-area-container site-main">

					<!-- Section -->
					<div class="main-section">
						<!-- container -->
						<div class="container gx-4">
							<!-- row -->
							<div class="row gx-36">

								<!-- col-lg-8 -->
								<div class="col-lg-8 offset-lg-2">
									<!-- Section title -->
									<div class="section-title text-center">
										<!-- Section title container -->
										<div class="section-title-container">
											<!-- Section title body -->
											<div class="section-title-body">
												<!-- Section title heading -->
												<div class="section-title-heading">
														<h2>フレーバー</h2>
												</div><!-- /End Section title heading -->
											</div><!--/End Section title body -->
										</div><!-- /End Section title container -->
									</div><!-- /End Section title -->
									<!-- GAP -->
									<div class="gap gap-36"></div>
								</div><!-- /End col-lg-8 -->


								<div class="col-lg-12 row">
									<h4>フルーツ系</h4>
									<div class="gap gap-36"></div>
									<% @flavors.where(category: 1).each do |flavor| %>
										<!-- col-lg-4 -->
										<div class="col-lg-2 mb-72">

											<p class="flavor-name text-center"><%= flavor.name %></p>
											<div class="flavor-image text-center"><%= link_to image_tag(flavor.flavor_image_url), flavor_path(flavor) %></div>

										</div><!-- /End col-lg-4 -->
									<% end %>
								</div>

								<div class="col-lg-12 row">
									<h4 class="text-center">スパイス系</h4>
									<div class="gap gap-36"></div>
									<% @flavors.where(category: 2).each do |flavor| %>
										<!-- col-lg-4 -->
										<div class="col-lg-2 mb-72">

											<p class="flavor-name text-center"><%= flavor.name %></p>
											<div class="flavor-image text-center"><%= link_to image_tag(flavor.flavor_image_url), flavor_path(flavor) %></div>

										</div><!-- /End col-lg-4 -->
									<% end %>
								</div>

								<div class="col-lg-12 row">
									<h4 class="text-center">リキュール系</h4>
									<div class="gap gap-36"></div>
									<% @flavors.where(category: 3).each do |flavor| %>
										<!-- col-lg-4 -->
										<div class="col-lg-2 mb-72">

											<p class="flavor-name text-center"><%= flavor.name %></p>
											<div class="flavor-image text-center"><%= link_to image_tag(flavor.flavor_image_url), flavor_path(flavor) %></div>

										</div><!-- /End col-lg-4 -->
									<% end %>
								</div>

								<div class="col-lg-12 text-center">
									<%= link_to 'フレーバー追加', new_flavor_path, class: "btn btn-md btn-outline btn-round btn-success ml-18 mr-18 mb-36" %>
								</div>

							</div><!-- /End row -->
						</div><!-- /End container -->
					</div><!-- /End Section -->


			</main><!-- /End Main -->
		</div><!-- /End Content area -->
	</div><!-- /End row -->
</div><!-- /End Page body -->