<div id="page-body" class="page-body">
	<!-- row -->
	<div class="row main-row justify-content-center">
		<!-- Content area
		==================================================== -->
		<div id="primary" class="content-area col-lg-12">
			<!-- Main -->
			<main id="main" class="content-area-container site-main">
				<!-- Section -->
				<div class="main-section">
						<!-- container -->
					<div class="container gx-4">
						<!-- row -->
						<div class="row gx-36">


							<!-- col-lg-4 -->
							<div class="offset-lg-12">
								<!-- Testimonials block -->
								<div class="main-block recommend-combination-block">
									<!-- Block container -->
									<div class="main-block-container recommend-combination-container">

										<!-- Block header -->
										<div class="main-block-header recommend-combination-header">
											<%= image_tag @shop.image_url %>
										</div><!-- /End Block header -->

										<!-- Block body -->
										<div class="main-block-body recommend-combination-body">

											<!-- Block heading -->
											<div class="main-block-heading recommend-combination-heading">
												<h5 class="flavor-name">
													<%= @shop.name %>
												</h5>
												<span class="badge bg-warning"><%= @shop.area %></span>
                        <h5><%= @shop.address %></h5>
                        <% if current_user.present? %>
                          <div><%= link_to "在庫のあるフレーバーを探す", flavors_shop_path(@shop), class: "btn btn-md btn-round btn-success ml-18 mr-18 mb-36 text-white" %></div>
                        <% end %>
											</div><!-- /End Block heading -->
										</div><!--/End Block body -->

									</div><!-- /End Block container -->
								</div><!-- /End Testimonials block -->
							</div><!-- /End col-lg-4 -->

							<% @categories.each do |category| %>
								<div class="main-block-title">
									<span><%= category.name %></span>
								</div>
								<% @flavors.where(category_id: category.id).each do |flavor| %>
									<div class="col-lg-4">
										<!-- Block -->
										<div class="main-block">
											<!-- Block container -->
											<div class="main-block-container">
												<!-- Block body -->
												<div class="main-block-body">
													<!-- Block content -->
													<div class="main-block-content">
														<ul class="main-block-list">
															<li>
																<div class="row item-block">
																	<div class="col-8 item-name">
																		<%= link_to flavor_path(flavor) do %>
																			<p><%= flavor.name %></p>
																		<% end %>
																	</div>
																	<div class="col-4 stock-flavor-check" id="stock_flavor_<%= flavor.id %>_status">
                                    <% if current_user.present? && @shop.user.id == current_user.id %>
                                      <%= render 'stocks/status_button', {shop: @shop, flavor: flavor} %>
                                    <% else %>
                                      <span>うんち</span>
                                    <% end %>
																	</div>
																</div>
															</li>
														</ul>
													</div><!-- /End Block content -->
												</div><!--/End Block body -->
											</div><!-- /End Block container -->
										</div><!-- /End Block -->
									</div><!-- /End col-lg-4 -->
								<% end %>
							<% end %>

						</div><!-- /End row -->
					</div><!-- /End container -->
				</div><!-- /End Section -->

			</main><!-- /End Main -->
		</div><!-- /End Content area -->
	</div><!-- /End row -->
</div><!-- /End Page body -->