<div class="wrapper">
  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-12 text-center">
            <h1>New Flavor</h1>
            <h1>新規フレーバー</h1>
          </div>
        </div>
      </div>
    </section>

    <div class="container">
			<div class="row">
				<div class="col align-self-center">
					<div class="card card-primary">
						<div class="card-body row">
							<%= form_with model: @flavor, url: admin_flavors_path, local: true do |f| %>
								<div class="form-group col-12">
									<%= f.label :name, "名前", class: "form-group-label" %>
									<%= f.text_field :name, class: "form-control" %>
								</div>
								<div class="form-group col-12">
									<%= f.label :category_id, "名前", class: "form-group-label" %>
									<%= f.select :category_id, @categories.map{|category| [category.name, category.id]}, {}, {class: "form-control"} %>
								</div>
								<div class="col-lg-12">
									<%= f.label :flavor_image, "イメージ", class: "label" %>
									<%= f.file_field :flavor_image, class: "form-control" %>
								</div>	
								<div class="text-center mt-3 col-12">
									<%= f.submit "登録", class: 'btn btn-success btn-lg' %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
  </div>
</div>