<div class="wrapper">
  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-12 text-center">
            <h1>Edit Flavors</h1>
            <h1>フレーバー編集</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <section class="content">
			<div class="card col-12">
				<div class="card-head">
					<div class="flavor-image text-center mt-3"><%= image_tag @flavor.flavor_image_url %></div>
				</div>
				<div class="card-body text-center">
					<p><%= @flavor.name %></p>
					<p><%= @flavor.category.name %></p>
				</div>
			</div>

			<div class="card col-12">
				<div class="card-body row">
					<%= form_with model: @flavor, url: admin_flavor_path(@flavor), method: :patch, local: true do |f| %>
						<div class="form-group col-12">
							<%= f.label :name, "名前", class: "form-group-label" %>
							<%= f.text_field :name, class: "form-control" %>
						</div>
						<div class="form-group col-12">
							<%= f.label :category_id, "カテゴリー", class: "form-group-label" %>
							<%= f.select :category_id, @categories.map{|category| [category.name, category.id]}, {}, {class: "form-control"} %>
						</div>
						<div class="col-lg-12">
							<%= f.label :flavor_image, "イメージ", class: "label" %>
							<%= f.file_field :flavor_image, class: "form-control" %>
						</div>							
						<div class="text-center mt-3 col-12">
							<%= f.submit "編集", class: 'btn btn-success btn-lg' %>
						</div>
					<% end %>
				</div>
			</div>
		</section>
  </div>
</div>