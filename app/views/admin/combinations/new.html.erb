<div class="wrapper">
  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-12 text-center">
            <h1>New Combination</h1>
            <h1>新規コンビネーション</h1>
          </div>
        </div>
      </div>
    </section>

    <div class="container">
			<div class="row">
				<div class="col align-self-center">
					<div class="card card-primary">
						<div class="card-body row">

							<!-- Form -->
              <%= form_with model: @combination, url: admin_combinations_path, class: "row", id: "combination_form", local: true do |f| %>
                <%= render 'form', {f: f} %>
              <% end %>

						</div>
					</div>
				</div>
			</div>
		</div>
  </div>
</div>
<%= javascript_pack_tag 'combination', media: 'all', 'data-turbolinks-track': 'reload' %>