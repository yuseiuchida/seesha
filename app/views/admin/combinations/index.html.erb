<div class="wrapper">
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Combinations</h1>
            <h1>コンビネーション</h1>
          </div>
          <div class="col-sm-12">
            <%= link_to '新規フレーバー', new_admin_flavor_path, class: "btn btn-warning mt-3" %>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
			<div class="col-md-12">
				<table class="table table-striped">
					<thead>
						<tr>
							<th scope="col">ID</th>
							<th scope="col">フレーバー</th>
							<th scope="col">フレーバー</th>
							<th scope="col">評価</th>
							<th scope="col">お気に入り</th>
							<th scope="col">作成日時</th>
							<th scope="col"></th>
						</tr>
					</thead>
					<tbody>
						<% @combinations.each do |combination| %>
							<tr>
								<td><%= combination.id %></td>
								<td><%= combination.first_flavor.name %></td>
								<td><%= combination.second_flavor.name %></td>
								<td><%= combination.status %></td>
								<td><%= combination.bookmarks.count %></td>
								<td><%= combination.created_at.strftime("%Y-%m-%d %H:%M") %></td>
								<td>
									<%= link_to '詳細', admin_combination_path(combination), class: "btn btn-info" %>
									<%= link_to '編集', edit_admin_combination_path(combination), class: "btn btn-success" %>
									<%= link_to '削除', admin_combination_path(combination), class: "btn btn-danger", method: :delete %>
								</td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</section>
  </div>
</div>