<div class="wrapper">
  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-12 text-center">
            <h1>Edit Users</h1>
            <h1>ユーザー編集</h1>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <div class="container">
			<div class="row">
				<div class="offset-3 col-6">
					<div class="card">
						<div class="card-body row">
							<div class="avatar-image col-3">
								<%= image_tag @user.avatar_url %>
							</div>
							<div class="name col-6">
								<br>
								<h5><%= @user.name %></h5>
							</div>
						</div>
					</div>
				</div>
				<div class="offset-3 col-6">
					<div class="card card-primary">
						<div class="card-body row">
							<%= form_with model: @user, url: admin_user_path(@user), method: :patch, local: true do |f| %>
								<div class="form-group col-12">
									<%= f.label :name, "名前", class: "form-group-label" %>
									<%= f.text_field :name, class: "form-control" %>
								</div>
								<div class="form-group col-12">
									<%= f.label :email, "メールアドレス", class: "form-group-label" %>
									<%= f.text_field :email, class: "form-control" %>
								</div>
								<div class="form-group col-12">
									<%= f.label :role, "権限", class: "form-group-label" %>
									<%= f.select :role, User.roles.keys, {}, {class: "form-control"} %>
								</div>
								<div class="form-group col-12">
									<%= f.label :avatar, "イメージ", class: "form-group-label" %>
									<%= f.file_field :avatar, class: "form-control" %>
								</div>
								<div class="text-center mt-3 col-12">
									<%= f.submit "編集", class: 'btn btn-success btn-block' %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
  </div>
</div>