<div class="wrapper">
  <div class="content-wrapper">
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>カテゴリー編集</h1>
          </div>
        </div>
      </div>
    </section>

    <div class="container">
			<div class="row">
				<div class="col align-self-center">
					<div class="card card-primary">
						<div class="card-body row">
							<%= form_with model: @category, url: admin_category_path(@category), local: true do |f| %>
								<div class="form-group col-4">
									<%= f.label :name, "名前", class: "form-group-label" %>
									<%= f.text_field :name, class: "form-control" %>
								</div>
								<div class="text-center mt-3 col-12">
									<%= f.submit "編集", class: 'btn btn-success btn-lg' %>
								</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
  </div>
</div>