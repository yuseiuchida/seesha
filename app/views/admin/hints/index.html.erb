<div class="wrapper">
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Hints</h1>
            <h1>ヒント</h1>
          </div>
          <div class="col-sm-12">
            <%= link_to '新規ヒント', new_admin_hint_path, class: "btn btn-warning mt-3" %>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="col-md-12">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">要素</th>
              <th scope="col">作成日時</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% @hints.each do |hint| %>
              <tr>
                <td><%= hint.id %></td>
                <td><%= hint.content %></td>
                <td><%= hint.created_at.strftime("%Y-%m-%d %H:%M") %></td>
                <td>
                  <%= link_to '削除', admin_hint_path(hint), class: "btn btn-danger", method: :delete %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>