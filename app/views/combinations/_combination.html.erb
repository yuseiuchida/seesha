<!-- Testimonials block -->
<div class="main-block recommend-combination-block">
  <!-- Block container -->
  <div class="main-block-container recommend-combination-container">
    <!-- Block header -->
    <div class="recommend-combination-header">
      <div class="recommend-combinations row">
        <div class="col-6 image">
          <%= image_tag combination.first_flavor.flavor_image_url %>
        </div>
        <div class="col-6 name">
          <%= link_to flavor_path(combination.first_flavor) do %>
            <p><%= combination.first_flavor.name %></p>
          <% end %>
        </div>
      </div>
      <div class="recommend-combinations row">
        <div class="col-6 image">
          <%= image_tag combination.second_flavor.flavor_image_url %>
        </div>
        <div class="col-6 name">
          <%= link_to flavor_path(combination.second_flavor) do %>
            <p><%= combination.second_flavor.name %></p>
          <% end %>
        </div>
      </div>
      <% if combination.third_flavor.present? %>
        <div class="recommend-combinations row">
          <div class="col-6 image">
            <%= image_tag combination.third_flavor.flavor_image_url %>
          </div>
          <div class="col-6 name">
            <%= link_to flavor_path(combination.third_flavor) do %>
              <p><%= combination.third_flavor.name %></p>
            <% end %>
          </div>
        </div>
      <% end %>
      <% if combination.fourth_flavor.present? %>
        <div class="recommend-combinations row">
          <div class="col-6 image">
            <%= image_tag combination.fourth_flavor.flavor_image_url %>
          </div>
          <div class="col-6 name">
            <%= link_to flavor_path(combination.fourth_flavor) do %>
              <p><%= combination.fourth_flavor.name %></p>
            <% end %>
          </div>
        </div>
      <% end %>
    </div><!-- /End Block header -->

    <!-- Block body -->
    <div class="recommend-combination-body">
      <!-- Block heading -->
      <div class="recommend-combination-heading">
        <div class="recommend-combination-status">
          <% if combination.status.present? %>
            <h6 class="role font-weight-500 accent-color"><%= combination.status %></h6>
            <span class="badge bg-success"><%= easy_status(combination) %></span>
            <span class="badge bg-danger"><%= sweet_status(combination) %></span>
            <span class="badge bg-warning"><%= refresh_status(combination) %></span>
            <span class="badge bg-primary"><%= relax_status(combination) %></span>
          <% else %>
            <h6>評価はありません</h6>
          <% end %>
        </div>
      </div><!-- /End Block heading -->

      <!-- Block content -->
      <div class="recommend-combination-content mt-24">
        <div class="action">
          <div class="share">
            <%= link_to "https://twitter.com/share?url=https://www.seesha-app.com/&text=【おすすめのフレーバー】%0a%0a#{ combination.name }", target: '_blank' do %>
              <i class="fab fa-twitter" style='color: #3399FF;'></i>
            <% end %>
          </div>
          <% if combination.status.present? %>
            <div class="show">
              <%= link_to combination_path(combination) do %>
                <i class="fas fa-paper-plane"></i>
              <% end %>
            </div>
          <% end %>
          <% if current_user.present? %>
            <div class="bookmark">
              <% if combination.status.present? %>
                <div id="bookmark_combination_<%= combination.id %>">
                  <%= render 'combinations/bookmarks_button', {combination: combination} %>
                </div>
              <% end %>
            </div>
            <div class="edit">
              <% if combination.user.id == current_user.id %>
                <%= link_to combination_path(combination), method: :delete  do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>

      </div><!-- /End Block content -->
    </div><!--/End Block body -->

  </div><!-- /End Block container -->
</div><!-- /End Testimonials block -->
