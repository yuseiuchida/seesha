<div id="page-body" class="page-body">
  <!-- row -->
  <div class="row main-row justify-content-center">

    <div id="primary" class="content-area col-lg-12">
      <!-- Main -->
      <main id="main" class="content-area-container site-main">

        <!-- Section -->
        <div class="main-section">
            <!-- container -->
          <div class="container gx-4">
            <!-- row -->
            <div class="row gx-36">

              <!-- col-lg-8 -->
              <div class="col-lg-8 offset-lg-2">

                <!-- Section title -->
                <div class="section-title text-center">
                  <!-- Section title container -->
                  <div class="section-title-container">
                    <!-- Section title body -->
                    <div class="section-title-body">
                      <!-- Section title heading -->
                      <div class="section-title-heading">
                        <h2>Mixes</h2>
                        <h2>フレーバーミックス</h2>
                      </div><!-- /End Section title heading -->
                    </div><!--/End Section title body -->
                  </div><!-- /End Section title container -->
                </div><!-- /End Section title -->

                <br>
                <div class="combination-container row">
                  <%= search_form_for @q, url: finds_combinations_path do |f| %>
                    <div class="search-field col-10">
                      <%= f.search_field :name_cont, placeholder: "キーワードを入力", class: "form-control" %>
                    </div>
                    <div class="search-button col-2">
                      <%= f.submit '検索', class: "btn btn-success btn-block form-control" %>
                    </div>
                  <% end %>
                </div>

                <!-- GAP -->
                <div class="gap gap-36"></div>

              </div><!-- /End col-lg-8 -->
              <div class="col-lg-2"><%= link_to "NEW", new_combination_path, class: "btn btn-md btn-success ml-18 mr-18 mb-36 text-white" %></div>

              <nav class="navbar">
                <form class="container-fluid justify-content-start">
                  <%= link_to "一覧", combinations_path(sort_key: Rate::ORDER[5]), class: "btn btn-sm btn-secondary mr-3" %>
                  <%= link_to "高評価 ", combinations_path(sort_key: Rate::ORDER[0]), class: "btn btn-sm btn-secondary mr-3" %>
                  <%= link_to "吸いやすい", combinations_path(sort_key: Rate::ORDER[1]), class: "btn btn-sm btn-secondary mr-3" %>
                  <%= link_to "甘い", combinations_path(sort_key: Rate::ORDER[2]), class: "btn btn-sm btn-secondary mr-3" %>
                  <%= link_to "スッキリ", combinations_path(sort_key: Rate::ORDER[3]), class: "btn btn-sm btn-secondary mr-3" %>
                  <%= link_to "リラックス", combinations_path(sort_key: Rate::ORDER[4]), class: "btn btn-sm btn-secondary mr-3" %>
                </form>
              </nav>

              <div class="main-block-title">
                <% if params[:sort_key].nil? %>
                  <span>一覧</span>
                <% else %>
                  <span><%= params[:sort_key] %></span>
                <% end %>
              </div>


              <div class="gap gap-36"></div>
              <!-- col-lg-4 -->


              <div class="combinations-list row">

                <% @rates.each do |rate| %>
                  <div class="col-lg-6">
                    <div class="row item-block">
                      <div class="col-10 item-name">
                        <%= link_to combination_path(rate.combination) do %>
                          <%= rate.combination.name %>
                        <% end %>
                      </div>
                      <% if current_user.present? %>
                        <div class="col-2" id="bookmark_combination_<%= rate.combination.id %>"><%= render 'combinations/bookmarks_button', {combination: rate.combination} %></div>
                      <% end %>
                      <div class="col-12 item-status">
                        <span class="badge bg-success"><%= easy_status(rate.combination) %></span>
                        <span class="badge bg-danger"><%= sweet_status(rate.combination) %></span>
                        <span class="badge bg-warning"><%= refresh_status(rate.combination) %></span>
                        <span class="badge bg-primary"><%= relax_status(rate.combination) %></span>
                      </div>
                    </div>
                  </div>
                <% end %>

              </div>

            </div><!-- /End row -->
          </div><!-- /End container -->
        </div><!-- /End Section -->
      </main><!-- /End Main -->
    </div><!-- /End Content area -->
  </div><!-- /End row -->
</div><!-- /End Page body -->