<div id="page-body" class="page-body">
	<!-- row -->
	<div class="row main-row justify-content-center">
		<!-- Content area
		==================================================== -->
		<div id="primary" class="content-area col-lg-12">
			<!-- Main -->
			<main id="main" class="content-area-container site-main">


				<div class="offset-2 col-lg-8">

					<!-- Section title -->
					<div class="section-title text-center">
						<!-- Section title container -->
						<div class="section-title-container">
							<!-- Section title body -->
							<div class="section-title-body">
								<!-- Section title heading -->
								<div class="section-title-heading">
									<br>
									<br>
									<h2>ログイン</h2>
								</div><!-- /End Section title heading -->
							</div><!--/End Section title body -->
						</div><!-- /End Section title container -->
					</div><!-- /End Section title -->
				</div>

				<!-- col-lg-12 -->
				<div class="col-lg-12">

					<!-- GAP -->
					<div class="gap gap-36"></div>

					<!-- Sign form -->
					<div class="form-block form-block-validation form-block-sign">
						<!-- Form container -->
						<div class="form-block-container">

								<!-- Form -->
								<%= form_with model: @user, url: login_path, class: "row form-block-sign-form", local: true do |f| %>

									
									<!-- Email Address -->
									<div class="col-md-12">
										<%= f.label :email, "メールアドレス", class: "label" %>
										<%= f.text_field :email, class: "form-control" %>
									</div>


									<!-- Password -->
									<div class="col-md-12">
										<%= f.label :password, "パスワード", class: "label" %>
										<%= f.password_field :password, class: "form-control" %>
									</div><!-- /End Password -->


									<!-- Submit button -->
									<div class="col-md-12">
										<%= f.submit "ログイン", class: "btn btn-outline-success btn-block mt-3" %>
									</div><!-- /End Submit button -->


								<% end %><!-- /End Form -->

								<!-- Links -->
								<div class="form-block-sign-footer text-center">
									<%= link_to "ユーザー登録", new_user_path %>
								</div><!-- /End Links -->

						</div><!-- /End Form container -->
					</div><!-- /End Sign form -->

				</div><!-- /End col-lg-12 -->

			</main><!-- /End Main -->
		</div><!-- /End Content area -->
	</div><!-- /End row -->
</div><!-- /End Page body -->