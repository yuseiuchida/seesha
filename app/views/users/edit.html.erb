<div id="page-body" class="page-body">
	<!-- row -->
	<div class="row main-row justify-content-center">
		<!-- Content area
		==================================================== -->
		<div id="primary" class="content-area col-lg-12">
			<!-- Main -->
			<main id="main" class="content-area-container site-main">




				<!-- col-lg-12 -->
				<div class="col-lg-12">

					<!-- GAP -->
					<div class="gap gap-36"></div>

					<!-- Sign form -->
					<div class="form-block form-block-validation form-block-sign">
						<!-- Form container -->
						<div class="form-block-container">

								<!-- Form -->
								<%= form_with model: @user, url: user_path(current_user.id), class: "row form-block-sign-form", local: true do |f| %>

									
									<!-- User Name -->
									<div class="col-md-12">
										<%= f.label :name, "ニックネーム", class: "label" %>
										<%= render 'shared/error_messages', object: f.object, item: :name %>
										<%= f.text_field :name, class: "form-control" %>
									</div>


									<!-- Email Address -->
									<div class="col-md-12">
										<%= f.label :email, "メールアドレス", class: "label" %>
										<%= render 'shared/error_messages', object: f.object, item: :email %>
										<%= f.text_field :email, class: "form-control" %>
									</div>

									<div class="col-lg-12">
										<%= f.label :avatar, "イメージ", class: "label" %>
										<%= f.file_field :avatar, class: "form-control" %>
									</div>	

									<!-- Submit button -->
									<div class="col-lg-12">
										<%= f.submit "編集", class: "btn btn-accent btn-block" %>
									</div><!-- /End Submit button -->


								<% end %><!-- /End Form -->


						</div><!-- /End Form container -->
					</div><!-- /End Sign form -->

				</div><!-- /End col-lg-12 -->

			</main><!-- /End Main -->
		</div><!-- /End Content area -->
	</div><!-- /End row -->
</div><!-- /End Page body -->